NAME = bsq
SRCS = srcs/*.c

all:
	gcc $(SRCS) -o $(NAME) -Wall -Wextra -Werror

clean:
	/bin/rm -f *.o

fclean: clean
	/bin/rm -f $(NAME)

re: flean all
